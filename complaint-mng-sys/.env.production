# Production Environment Variables for Render
# Copy these to your Render Dashboard's Environment tab
# DO NOT commit this file with real values to Git!

# Database Configuration
# For Render PostgreSQL: Get from your database connection details
# For External MySQL: Use your provider's connection details
DB_URL=jdbc:mysql://[your-host]:[your-port]/cms_db
DB_USERNAME=complaint_user
DB_PASSWORD=your_strong_password_here_min_16_chars

# JWT Configuration
# CRITICAL: Generate a secure random key using:
#   openssl rand -base64 32
# or
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your_generated_secure_secret_key_here

# JWT Token Expiration (in milliseconds)
# 86400000 = 24 hours (recommended)
JWT_EXPIRATION=86400000

# Spring Boot Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false

# Server Port (Render sets this automatically, usually 10000+)
# Leave empty to let Render manage it
PORT=

# Application Name
SPRING_APPLICATION_NAME=complaint-mng-sys

# Logging Level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_IP_COMPLAINT_MNG_SYS=DEBUG
